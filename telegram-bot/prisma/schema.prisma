datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Subscription {
  id         Int      @id @default(autoincrement())
  telegramId Int
  username   String
  startDate  DateTime
  endDate    DateTime
  notified   Boolean  @default(false)
  plan       String?   // nullable
}

model Payment {
  id        Int      @id @default(autoincrement())
  orderId   String   @unique
  userId    String
  provider  String
  amount    Int
  currency  String
  createdAt DateTime @default(now())
}